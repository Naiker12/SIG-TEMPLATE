// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Modelos de Autenticación y Usuarios ---
model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String
  password   String
  bio        String?
  createdAt  DateTime @default(now()) @map("createdAt")
  updatedAt  DateTime @updatedAt @map("updatedAt")
  roleId     String
  role       Role     @relation(fields: [roleId], references: [id])
  files      File[]
  // Relaciones con los nuevos modelos de análisis
  FileMetadata FileMetadata[]
  Project    Project[]

  @@map("User")
}

model Role {
  id    String @id @default(uuid())
  name  String @unique
  users User[]

  @@map("Role")
}

// --- Modelo de Archivos (Legado, para herramientas básicas) ---
model File {
  id        String   @id @default(uuid())
  filename  String
  fileType  String
  size      Int
  status    String
  createdAt DateTime @default(now()) @map("createdAt")
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@map("File")
}

// --- Modelos para el Flujo de Análisis de Datos ---

model FileMetadata {
  id         String   @id @default(uuid())
  filename   String
  filetype   String
  filepath   String   // Ruta física al archivo en el servidor
  columns    String[] // Lista de columnas detectadas
  rows_count Int
  size       Int
  uploadedAt DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  projects   Project[]

  @@map("FileMetadata")
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  config      Json // Configuración del dashboard (gráficos, filtros, etc.)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  fileId      String
  file        FileMetadata @relation(fields: [fileId], references: [id])

  @@map("Project")
}
