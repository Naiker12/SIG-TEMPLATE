// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  bio           String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  roleId        String
  role          Role           @relation(fields: [roleId], references: [id])
  files         File[]
  uploadedFiles FileMetadata[]
  projects      Project[]

  @@map("Usuario")
}

model Role {
  id   String @id @default(uuid())
  name String @unique
  User User[]

  @@map("Role")
}

model File {
  id        String   @id @default(uuid())
  filename  String
  fileType  String
  size      Int
  status    String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@map("File")
}

model FileMetadata {
  id         String    @id @default(uuid())
  filename   String
  filetype   String
  filepath   String
  columns    String[]
  rows_count Int
  size       Int
  uploadedAt DateTime  @default(now())
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  projects   Project[]

  @@map("FileMetadata")
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String?
  fileId      String
  config      Json
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  file        FileMetadata @relation(fields: [fileId], references: [id])

  @@map("Project")
}